@page "/categories"

<h3>Categories</h3>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Name</th>
            <th>Create Date</th>
            <th>Is Active</th>
            <th>Is Deleted</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in categories)
        {
            <tr>
                <td>@category.Title</td>
                <td>@category.Name</td>
                <td>@category.CreatedOn</td>
                <td>@category.IsActive</td>
                <td>@category.IsDeleted</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private IEnumerable<Category> categories;
    protected override void OnInitialized()
    {
        GenericHttpClient httpClient = new GenericHttpClient();
        categories = httpClient.GetJsonAsync<Category>("https://localhost:44359/api/Category").Result;
        base.OnInitialized();
    }
}
